
@model IEnumerable<MvcPracticaVehiculos.Models.Vehiculo>

@{
    int n = 0;
}

@foreach (var vehiculo in Model)
{
    if (n % 3 == 0)
    {
        @Html.Raw("<div class=\"row\">")
    }
    <div class="col-md-4">
        @Html.DisplayFor(modelItem => vehiculo.matricula)

        @Html.DisplayFor(modelItem => vehiculo.modelo)

        @Html.DisplayFor(modelItem => vehiculo.marca)

        @Html.DisplayFor(modelItem => vehiculo.coste)

        @*@Html.DisplayFor(modelItem => vehiculo.TipoVehiculo.nombreTipo)*@
    </div>
    if (++n % 3 == 0 || n == Model.Count())
    {
        @Html.Raw("</div>")
    }
}

